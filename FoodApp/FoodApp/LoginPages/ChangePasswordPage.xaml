<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodApp.LoginPages.ChangePasswordPage">
    <ContentPage.Content>
        <StackLayout>
            <Label HorizontalTextAlignment="Center" TextColor="Black" FontSize="26" Text="Podaj stare hasło" Margin="0,30,0,0"></Label>
            <Entry IsPassword="true" x:Name="txtOldPass" FontSize="26" Margin="30,0,30,0"></Entry>
            
            <Label HorizontalTextAlignment="Center" TextColor="Black" FontSize="26" Text="Podaj nowe hasło" ></Label>
            <Entry  IsPassword="true" x:Name="txtNewPass" FontSize="26" Margin="30,0,30,0"></Entry>

            <Label HorizontalTextAlignment="Center" TextColor="Black" FontSize="26" Text="Powtórz nowe hasło"></Label>
            <Entry IsPassword="true" x:Name="txtPassAgain" FontSize="26" Margin="30,0,30,0"></Entry>
            
            <Button FontSize="22" Text="Zmień hasło" Clicked="Button_Clicked" Margin="5,0,5,0"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>