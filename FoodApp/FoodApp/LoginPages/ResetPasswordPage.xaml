<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodApp.LoginPages.ResetPassword">
    <ContentPage.Content>
        <StackLayout>
            <ImageButton Source="backarrow.png"
            BackgroundColor="Transparent"
            WidthRequest="30"
            HeightRequest="30"
            HorizontalOptions="End"
            Margin="0,30,30,0"
            Clicked="GoBackToMain"
           >
            </ImageButton>
            <Label Text="Email" FontSize="32" HorizontalTextAlignment="Center" TextColor="Black" Margin="0,160,0,0"/>
            <Entry x:Name="txtEmail" Placeholder=""  IsPassword="true" FontSize="26" Margin="45,0,45,0" />

            <Button Text="Resetuj hasło" Clicked="Reset_Clicked" Margin="25,5,25,5" FontSize="22"/>
            
            <Label x:Name="lblError" Text="" FontSize="26" HorizontalTextAlignment="Center" TextColor="Red" Margin="0,10,0,0"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>